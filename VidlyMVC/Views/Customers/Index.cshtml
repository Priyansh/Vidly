@using System.Web.UI.WebControls
@model VidlyMVC.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Customer</th>
        </tr>
        @foreach (var customer in Model.lstCustomers)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name,
                        "Details",
                        "Customers",
                        new {id = customer.Id},
                        null)</td>
            </tr>
        }
    </table>
    

</div>
<hr/>
<form>
    <div class="form-group">
        @Html.Label("Customer Name")
        @Html.TextBox("txtCustName", null, new { @class = "form-control", @PlaceHolder = "Please Enter Name"})
    </div>
    <div class="form-group">
        @Html.Label("Customer Address")
        @Html.TextBox("txtCustAddress", null, new { @class = "form-control", @PlaceHolder = "Please Enter Address" })
    </div>
    <button id="btnSave" class="btn btn-primary">Save</button>
</form>
<hr/>
<table id="tblCustomers" class="table table-bordered table-striped table-hover table-responsive">
    <thead>
    <tr>
        <th>Name</th>
        <th>Address</th>
    </tr>
    </thead>
    <tbody></tbody>
    
</table>

@section scripts
{
    <script type="text/javascript">
        $(function() {
            //DisplayData();
            DisplayCustomer();
            //Create records on button click
            $("#btnSave").click(function() {
                //make customer data
                var cust = {};
                cust.Name = $("#txtCustName").val();
                cust.Address = $("#txtCustAddress").val();
                //ajax call
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("CreateCustomer")',
                    data: '{cust: ' + JSON.stringify(cust) + '}',
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",  
                    success: function () {  
                        alert("Data has been added successfully.");
                        $("#txtCustName").val("");
                        $("#txtCustAddress").val("");
                        DisplayCustomer();
                    },  
                    error: function () {  
                        alert("Error while inserting data");  
                    }  
                });
                return false;
            });
        });

